<?xml version="1.0"?>
<!-- pedigree chart xml to be used with flash 
	
	Author: Bill Pickard, Simon Fraser University - bpickard@sfu.ca
	  
     The diagram node and each connector node require a level attribute set to the nesting depth.
	 I also didn't have too much time to balance placements in the program, but if you find things crowded you can
	 use a <shape type="spacer" />.
	 
	 If you DO use a spacer, the connector won't necessarily connect properly, so you can add an extendleft=[number] to 
	shape node where [number] is the amount of pixels to extend left from the shape you add the attribute to.
	 
	 Valid tags are:
	 
	 <shape/>
	 @attributes
	    type = "spacer","square","square_filled","circle","circle_filled","circle_filled_cross"
		stem = "true","false"
		
	 <connector></connector>

	 @attributes
		type = "single","double"
		level = n where n is the level of nesting
	 
	 
//-->
<pedigreechart>
	<diagram level="1">
		<shape type="circle" answer="Maternal Grandmother" />
		<connector type="single" level="2">
			<shape type="square_filled" stem="true" answer = "Uncle Rex"/>
			<shape type="square" stem="true" answer="Uncle Paul" />
			<connector type="single" level="3">
				<shape type="square" stem="true" answer="Uncle Paul's Son" />
			</connector>
			<shape type="circle" answer="none" />
			<shape type="circle" stem="true" answer="Aunt Helen" />
			<connector type="single" level="3">
				<shape type="square_filled" stem="true" answer="Aunt Helen's Son" />
			</connector>
			<shape type="square" answer="none" />
			<shape type="circle" stem="true" answer="Aunt Jenny" />
			<shape type="circle" stem="true" answer="Mother" />
			<connector type="single" level="3">
				<shape type="circle" stem="true" answer="Eldest Sister" />
				<shape type="square_filled" stem="true" answer="Brother Dylan" />
				<shape type="circle" stem="true" answer="Younger Sister" />
				<shape type="square" label="Miles" stem="true" answer="none"/>
			</connector>
			<shape type="square" answer="Father" />
		</connector>
		<shape type="square" answer="Maternal Grandfather" />
	</diagram>
	<personlist>
		<person name="Maternal Grandmother"/>
		<person name="Maternal Grandfather"/>
		<person name="Uncle Rex" />
		<person name="Uncle Paul"/>
		<person name="Uncle Paul's Son"/>
		<person name="Aunt Helen"/>
		<person name="Aunt Helen's Son"/>
		<person name="Aunt Jenny"/>
		<person name="Mother"/>
		<person name="Father"/>
		<person name="Eldest Sister"/>
		<person name="Brother Dylan"/>
		<person name="Younger Sister"/>
	</personlist>
</pedigreechart>